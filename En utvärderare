import csv
import re

out = []
with open(r'C:\Users\Filip\PycharmProjects\SyntacticAnalysis2\out.conll') as infile:
    for line in infile:
        delEmptyLines = line.strip()
        if delEmptyLines:
            out.append(delEmptyLines)
out = [w.replace('\t', ' ') for w in out]

dep_dev = []
with open(r'C:\Users\Filip\PycharmProjects\SyntacticAnalysis2\swedish_dep_dev.conll') as infile:
    for line in infile:
        delEmptyLines = line.strip()
        if delEmptyLines:
            dep_dev.append(delEmptyLines)
dep_dev = [w.replace('\t', ' ') for w in dep_dev]



cleaned_out = []
for line in out:
    t = re.findall('r(?:\S+ ){5}(\S+)\s(\S+)', line)
    cleaned_out.append(t)
cleaned_out = [x for x in cleaned_out if x != []]
print(cleaned_out)

cleaned_dep_dev = []
for line in dep_dev:
    t = re.findall('r(?:\S+ ){5}(\S+)\s(\S+)', line)
    cleaned_dep_dev.append(t)
cleaned_dep_dev = [x for x in cleaned_dep_dev if x != []]
print(cleaned_dep_dev)



intersection_set = set(map(tuple, cleaned_out)) & set(map(tuple, cleaned_dep_dev))
print(intersection_set)




#print(len(intersection_set))
print("LAS:",len(cleaned_dep_dev))
